@page "/createpost"

<div id="container">
    <div class="post">
        <div class="post-header">
            <h1>NEW POST</h1>
            <input type="text" id="postTitle" placeholder="Enter Post Title">
            <select id="postGenreDropdown">
                <option value="genre" disabled selected>Genre</option>
                <option value="1">Option 1</option>
                <option value="2">Option 2</option>
                <option value="3">Option 3</option>
            </select>
            <div class="post-content">
                <textarea id="postParagraph" placeholder="Enter Post Paragraph (2000 characters max)" maxlength="2000"></textarea>
            </div>
            <button class="publish">Publish</button>
        </div>
    </div>
</div>

