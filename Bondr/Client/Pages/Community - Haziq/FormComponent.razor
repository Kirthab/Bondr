@using Bondr.Client.Components
<link rel="stylesheet" href="FormComponentStyles.css" />

<EditForm Model="@community" OnValidSubmit="@OnValidSubmit">
    <DataAnnotationsValidator />
    <ValidationSummary />

<fieldset disabled="@Disabled">
    <div class="form-group">
        <label>New Name: </label>
        <div>
            <InputText @bind-Value="@community.Name" class="form-control" />
            <ValidationMessage For="@(() => community.Name)" />
        </div>
    </div>
        <div class="form-group">
            <label>New Description </label>
            <div>
                <InputText @bind-Value="@community.Description" class="form-control" />
                <ValidationMessage For="@(() => community.Description)" />
            </div>
        </div>
</fieldset>

    <br />
    <br />

    @if(!Disabled){
        <button type="submit" class="btn btn-success btn-block">
            @ButtonText
        </button>     
    }
    <div class="d-flex justify-content-end">
    <BackToList Target="communities/" />
    </div>
</EditForm>


@code {
    [Parameter] public bool Disabled { get; set; } = false;
    [Parameter] public Community community { get; set; }
    [Parameter] public string ButtonText { get; set; } = "Save";
    [Parameter] public EventCallback OnValidSubmit { get; set; }
}